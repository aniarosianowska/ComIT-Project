extends ./layout.pug

block page
    .row
        .col-12
            #main_content.row
        .col-12
            h1 Recipes
            div
                if recipes.length === 0
                    p Sorry, no recipes
                else
                    each recipe in recipes
                        p
                            a(href='/recipe/' + recipe._id, class='list')= recipe.name
                            br
                            br
                            img(src='/img/' + recipe.image, width='300', height='200')
